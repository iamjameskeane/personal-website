---
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<section class="mb-16">
  <h2 class="text-2xl mb-8 border-b border-[#eee] dark:border-[#333] pb-2 text-[#888] dark:text-[#555] uppercase tracking-widest text-sm font-sans font-semibold">
    {title}
  </h2>
  <div class="space-y-6">
    <slot />
  </div>
</section>
