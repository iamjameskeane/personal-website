---
interface Props {
  title: string;
  titleHref?: string;
  location: string;
  coordinates: string;
  coordinatesHref?: string;
  description: string;
  date: string;
}

const { title, titleHref, location, coordinates, coordinatesHref, description, date } = Astro.props;
---
<div class="group">
  <div class="flex flex-col md:flex-row md:items-baseline md:justify-between mb-1 gap-1 md:gap-0">
    <div class="flex flex-col md:flex-row md:items-baseline gap-1 md:gap-3">
      <div class="flex items-start justify-between md:justify-start gap-3">
        {titleHref ? (
          <a 
            href={titleHref} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-lg font-sans font-medium text-text-light dark:text-text-dark brandur-link"
          >
            {title}
          </a>
        ) : (
          <span class="text-lg font-sans font-medium text-text-light dark:text-text-dark">
            {title}
          </span>
        )}
        <span class="text-sm text-[#999] dark:text-[#888] font-sans italic md:hidden pt-1">{date}</span>
      </div>
      
      <div class="flex flex-wrap items-baseline gap-x-3 gap-y-0.5">
        <span class="text-xs text-[#999] dark:text-[#888] font-sans">
          {location}
        </span>
        {coordinatesHref ? (
          <a 
            href={coordinatesHref} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-xs secondary-link font-mono break-all sm:break-normal"
          >
            {coordinates}
          </a>
        ) : (
          <span class="text-xs text-[#999] dark:text-[#888] font-mono break-all sm:break-normal">
            {coordinates}
          </span>
        )}
      </div>
    </div>
    <span class="text-sm text-[#999] dark:text-[#888] font-sans italic hidden md:block">{date}</span>
  </div>
  <p class="text-[#666] dark:text-[#888] text-sm leading-relaxed max-w-xl">
    {description}
  </p>
</div>
