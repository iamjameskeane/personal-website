---
interface Props {
  title: string;
  href: string;
  description?: string;
  date?: string;
  external?: boolean;
  github?: string;
  writeup?: string;
}

const { title, href, description, date, external = false, github, writeup } = Astro.props;

// Split title by em-dash to handle Role/Company stacking on mobile
const parts = title.split(' — ');
---
<div class="group">
  <div class="flex flex-col md:flex-row md:items-baseline md:justify-between mb-1 gap-1 md:gap-0">
    <div class="flex flex-col md:flex-row md:items-baseline gap-1 md:gap-3">
      <div class="flex items-start justify-between md:justify-start gap-3">
        <a 
          href={href} 
          target={external ? "_blank" : undefined}
          rel={external ? "noopener noreferrer" : undefined}
          class="text-lg font-sans font-medium text-text-light dark:text-text-dark brandur-link"
        >
          {parts.length > 1 ? (
            <span class="flex flex-col md:flex-row md:items-baseline md:gap-2">
              <span>{parts[0]}</span>
              <span class="hidden md:inline text-text-light/20 dark:text-text-dark/30">—</span>
              <span class="text-base md:text-lg text-[#888] dark:text-[#666] md:text-inherit font-normal md:font-medium">
                {parts[1]}
              </span>
            </span>
          ) : (
            title
          )}
        </a>
        {date && <span class="text-sm text-[#999] dark:text-[#555] font-sans italic md:hidden pt-1">{date}</span>}
      </div>

      <div class="flex items-baseline gap-3">
        {github && (
          <a 
            href={github} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-xs secondary-link font-sans"
          >
            GitHub
          </a>
        )}
        {writeup && (
          <a 
            href={writeup} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-xs secondary-link font-sans"
          >
            Writeup
          </a>
        )}
      </div>
    </div>
    {date && <span class="text-sm text-[#999] dark:text-[#555] font-sans italic hidden md:block">{date}</span>}
  </div>
  {description && (
    <p class="text-[#666] dark:text-[#888] text-sm leading-relaxed max-w-xl">
      {description}
    </p>
  )}
</div>
